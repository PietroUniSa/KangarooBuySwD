<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/kangaroodb"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="${DB_USER}"
              password="${DB_PASS}"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="${DB_URL}"/>
</Context>
